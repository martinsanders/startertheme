<li data-id="[[+id]]" data-order="[[+position]]">
	<i class="icon icon-sort handle" aria-hidden="true"></i>
	<span class="name">[[+filename]]</span>
	<span class="block-actions">
		<a class="small" data-update-file="[[+id]]" href="javascript:void(0)" title="[[+modxminify.global.edit]] [[+modxminify.file:strtolower]] [[+filename]]">
			<i class="icon icon-pencil" aria-hidden="true"></i> 
			[[+modxminify.global.edit]] [[+modxminify.file:strtolower]]
		</a>
		<a class="small remove" data-remove-file="[[+id]]" href="javascript:void(0)" title="[[+modxminify.global.remove]] [[+modxminify.file:strtolower]] [[+filename]]">
			<i class="icon icon-times" aria-hidden="true"></i> 
			[[+modxminify.global.remove]] [[+modxminify.file:strtolower]]
		</a>
	</span>
</li>