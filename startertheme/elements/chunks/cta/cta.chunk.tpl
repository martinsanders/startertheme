    <div class="wrapper">
        <div class="richtext">
            <div itemprop="text" class="text-center pt-5 pb-4">
                <h2 class="h1 text-white mb-4">[[*textCTA]]</h2>
                [[*linkCTA:len:gt=`0`:then=`<a href="[[*linkCTA]]" class="btn btn-lg mb-0">Learn More <i class="fas fa-long-arrow-alt-right"></i></a>`]]
            </div>
        </div>
    </div>
</section>